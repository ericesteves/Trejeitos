
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inicio</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>

<body>
    <div class="page-header" style="height:40px; border-bottom:double;">
        <h1 style="padding-left:10px;">Trejeitos - Sua loja da moda</h1>
    </div>
    <div class="row" style="text-align:center">
        <div class="col-lg-3" style=""><a href="#" style="font-size:14px;">Novidades</a></div>
        <div class="col-lg-3" style=""><a href="#" style="font-size:14px;">Acessórios</a></div>
        <div class="col-lg-3" style=""><a href="#" style="font-size:14px;">Coleções</a></div>
        
        <div class="col-lg-3">
            @{ 
                if (Session["nome"] != null)
                {
                    <label>Bem vindo, @Session["nome"]</label>
                    <br />
                    <a href="/Login/Sair">Sair</a>
                }
                else
                {
                    <label>Novo por aqui?</label>
                    <a href="/Cliente/Cliente" class="btn btn-default btn-xs">Cadastre-se</a>
                    <label>ou</label>
                    <a href="/Login/Login" class="btn btn-default btn-xs">Entre</a>
                }
            }
        </div>
    <div class="row" style="border-top:double; padding-top:20px;">
        <div class="col-lg-2 col-lg-offset-1"><label>Ordenar por</label></div>
        <div class="col-lg-3"><label><input type="radio" name="vendidos">Mais Vendidos</label></div>
        <div class="col-lg-3"><label><input type="radio" name="vendidos" onclick="location.href='/Inicio/OrdenaPrecoAsc'">Menor Preço</label></div>
        <div class="col-lg-3"><label><input type="radio" name="vendidos" onclick="location.href='/Inicio/OrdenaPrecoDesc'">Maior Preço</label></div>
    </div>
    <div class="row" style="padding:10px;">
        @foreach (var prod in Model)
        {
            <div class="col-sm-9 col-md-3">
                <div class="thumbnail">
                    <img src="@prod.imagem" alt="Imagem do Produto" style="width:180px;  height:240px;">
                    <div class="caption">
                        <h3>@prod.nome</h3>
                        <p>@prod.descricao</p>
                        <p>@prod.colecao</p> <p>@prod.preco</p>
                        <p><a href="/Carrinho/AddCarrinho" class="btn btn-primary" role="button">Comprar</a> </p>
                    </div>
                </div>
            </div>
        }
        </div>
    </div> 
</body>
</html>
